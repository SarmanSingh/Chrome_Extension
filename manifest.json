{
  "manifest_version": 3,
  "name": "Basic Chrome Extension",
  "version": "1.0",
  "permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Basic Extension"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "https://v2.jokeapi.dev/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
